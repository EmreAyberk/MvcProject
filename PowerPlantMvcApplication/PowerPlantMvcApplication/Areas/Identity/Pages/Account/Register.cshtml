@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="card card-authentication1 mx-auto my-4">
    <div class="card-body">
        <div class="card-content p-2">
            <div class="text-center">
                <img src="/assets/images/logo-icon.png" alt="logo icon">
            </div>
            <div class="card-title text-uppercase text-center py-3">Sign Up</div>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="sr-only">Email ID</label>
                    <div class="position-relative has-icon-right">
                        <input type="text" asp-for="Input.Email" id="exampleInputEmailId" class="form-control input-shadow" placeholder="Enter Your Email ID">
                        <div class="form-control-position">
                            <i class="icon-envelope-open"></i>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="sr-only">Password</label>
                    <div class="position-relative has-icon-right">
                        <input asp-for="Input.Password" type="text" id="exampleInputPassword" class="form-control input-shadow" placeholder="Choose Password">
                        <div class="form-control-position">
                            <i class="icon-lock"></i>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="sr-only">Password</label>
                    <div class="position-relative has-icon-right">
                        <input asp-for="Input.ConfirmPassword" type="text" id="exampleInputPassword2" class="form-control input-shadow" placeholder="Repeat Password">
                        <div class="form-control-position">
                            <i class="icon-lock"></i>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-light btn-block waves-effect waves-light">Sign Up</button>
            </form>
        </div>
    </div>
    <div class="card-footer text-center py-3">
        <p class="text-warning mb-0">Already have an account? <a asp-page="./Login"> Sign In here</a></p>
    </div>
</div>

@Html.Partial("_RightSidebar")

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="loader-wrapper">
    <div class="lds-ring">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
    </div>
</div>
<div class="card card-authentication1 mx-auto my-5">
    <div class="card-body">
        <div class="card-content p-2">
            <div class="text-center">
                <img src="/assets/images/logo-icon.png" alt="logo icon">
            </div>
            <div class="card-title text-uppercase text-center py-3">Sign In</div>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="sr-only">Username</label>
                    <div class="position-relative has-icon-right">
                        <input type="text" id="exampleInputUsername" asp-for="Input.Email" class="form-control input-shadow" placeholder="Enter Username">
                        <div class="form-control-position">
                            <i class="icon-user"></i>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" for="exampleInputPassword" class="sr-only">Password</label>
                    <div class="position-relative has-icon-right">
                        <input asp-for="Input.Password" type="password" id="exampleInputPassword" class="form-control input-shadow" placeholder="Enter Password">
                        <div class="form-control-position">
                            <i class="icon-lock"></i>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-6 text-right">
                        <a asp-page="./ForgotPassword">Reset Password</a>
                    </div>
                </div>
                <button type="submit" class="btn btn-light btn-block">Sign In</button>
            </form>
        </div>
    </div>
    <div class="card-footer text-center py-3">
        <p class="text-warning mb-0">Do not have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"> Sign Up here</a></p>
        <p class="text-warning mb-0">
            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
        </p>
    </div>
</div>

<!--Start Back To Top Button-->
<a href="javaScript:void();" class="back-to-top">
    <i class="fa fa-angle-double-up"></i>
</a>
<!--End Back To Top Button-->


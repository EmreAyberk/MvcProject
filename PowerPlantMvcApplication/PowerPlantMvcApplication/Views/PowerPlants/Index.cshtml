@model List<PowerPlantMvcApplication.Data.PowerPlant>
@{
    ViewData["Title"] = "PowerPlant List";
}

@Html.Partial("_Sidebar")

@Html.Partial("_Topbar")

<div class="clearfix"></div>

<div class="content-wrapper">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            Powerplant List
                            <a asp-action="Edit" class="btn btn-success">Create new PowerPlant</a>
                        </h5>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Actions</th>
                                    <th scope="col">Name</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@item.Id</th>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                            <a href="javascript:deleteById(@item.Id)" class="btn btn-danger btn-sm">Delete</a>
                                        </td>
                                        <td>@item.Name</td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--End Row-->

        <!--start overlay-->
        <div class="overlay toggle-menu"></div>
        <!--end overlay-->

    </div>
    <!-- End container-fluid-->

</div><!--End content-wrapper-->

<!--Start footer-->
<footer class="footer">
    <div class="container">
        <div class="text-center">
            Copyright © 2018 Dashtreme Admin
        </div>
    </div>
</footer>
<!--End footer-->

<!--End footer-->
@Html.Partial("_RightSidebar")

@section Scripts
{
    <script>
    function deleteById(id){
        $.getJSON('@Url.Action("Delete")', {id:id}).done(function(){
            swal({icon:'success', text:'Deleted successfully!'}).then(function(){
                location.reload();
            });
        });
    }
    </script>
}
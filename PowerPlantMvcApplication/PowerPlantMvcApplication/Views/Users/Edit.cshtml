@using PowerPlantMvcApplication.Data
@model Microsoft.AspNetCore.Identity.IdentityUser
@{
    ViewData["Title"] = "User List";
}

@Html.Partial("_Sidebar")

@Html.Partial("_Topbar")

<div class="clearfix"></div>

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row mt-3">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Create User </div>
                        <hr>
                        <form asp-action="Edit" method="post">
                            <div asp-validation-summary="All"></div>
                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <input type="text" class="form-control" asp-for="Email">
                            </div>
                            <div class="form-group">
                                <label asp-for="PasswordHash">Password</label>
                                <input type="text" class="form-control" name="Password">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-light px-5"><i class="fa fa-save"></i> Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>

        <!--start overlay-->
        <div class="overlay toggle-menu"></div>
        <!--end overlay-->

    </div>
    <!-- End container-fluid-->

</div><!--End content-wrapper-->

<!--Start footer-->
<footer class="footer">
    <div class="container">
        <div class="text-center">
            Copyright © 2018 Dashtreme Admin
        </div>
    </div>
</footer>
<!--End footer-->

<!--End footer-->

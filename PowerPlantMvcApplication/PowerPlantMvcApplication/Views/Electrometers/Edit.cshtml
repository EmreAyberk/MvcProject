@using PowerPlantMvcApplication.Data
@model PowerPlantMvcApplication.Data.Electrometer
@{
    ViewData["Title"] = "Electrometer List";
    var ppList = new SelectList(ViewContext.ViewData["PowerPlantList"] as List<PowerPlant>, "Id","Name");
}

@Html.Partial("_Sidebar")

@Html.Partial("_Topbar")

<div class="clearfix"></div>

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row mt-3">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Edit Electrometer #@Model.Id</div>
                        <hr>
                        <form asp-action="Edit" method="post">
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input type="text" class="form-control" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label asp-for="Value">Value</label>
                                <input type="text" class="form-control" asp-for="Value">
                            </div>
                            <div class="form-group">
                                <label asp-for="PowerPlantId">PowerPlant</label>
                                <select class="form-control" asp-for="PowerPlantId" asp-items="ppList" required="required">
                                    <option>
                                        
                                    </option>
                                </select>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-light px-5"><i class="fa fa-save"></i> Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>

        <!--start overlay-->
        <div class="overlay toggle-menu"></div>
        <!--end overlay-->

    </div>
    <!-- End container-fluid-->

</div><!--End content-wrapper-->

<!--Start footer-->
<footer class="footer">
    <div class="container">
        <div class="text-center">
            Copyright © 2018 Dashtreme Admin
        </div>
    </div>
</footer>
<!--End footer-->

<!--End footer-->
@Html.Partial("_RightSidebar")

